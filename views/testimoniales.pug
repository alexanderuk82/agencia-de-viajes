extends  ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ../layout/feedback.pug
        
        .col.md-12 
            h2.d-block-w-100.text-center Agrega un Testimonial
            if(errores)
                each error in errores
                    .alert.col.alert-danger.text-center #{error.mensaje}
        .row.justify-content-center.col
            .col-md-8 
                form(action="/testimoniales" method="POST")
                    .form-group
                        label(for="nombre") Nombre
                        input(type="text" placeholder="Nombre" id="nombre" name="nombre" class="form-control", value= nombre )
                    .form-group
                        label(for="correo") correo electronico
                        input(type="email" placeholder="escribe tu correo" id="correo" name="correo" class="form-control", value= correo)
                    .form-group
                        label(for="mensaje") Mensaje
                        textarea(class="form-control" name="mensaje" placeholder ="Deja tu mensaje" id= "mensaje")= mensaje
                    input(type="submit" class="btn btn-success btn-block")